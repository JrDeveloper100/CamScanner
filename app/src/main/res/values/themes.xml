<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CamScanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:fontFamily">@font/rubik01</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@color/app_background_color</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Theme.CamScanner" parent="Base.Theme.CamScanner" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModeStyle</item>
    </style>

    <style name="AppModeStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/home_screen_bottom_sheet_design</item>
    </style>

    <style name="toolbar_text">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="SeekBarThicker" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/custom_progress_drawable</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>

    <style name="ButtonNoShadow" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- TextView Color in Light Mode -->

    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- Set the text color for TextView -->
        <item name="android:textColor">@color/light_black</item>
    </style>

    <!-- Light mode -->

    <style name="background_theme_color">
        <item name="android:background">@color/app_background_color</item>
    </style>


    <!-- Separator Color in Light mode -->

    <style name="separator_background_theme_color">
        <item name="android:background">@color/separator_color_light_mode</item>
    </style>

    <!-- Text Color in Light Mode -->

    <style name="TEXT">
        <item name="android:textColor">@color/light_grey4</item>
    </style>

    <!-- Button Design in Light Mode -->

    <style name="BUTTON">
        <item name="android:background">#3D73DD</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>