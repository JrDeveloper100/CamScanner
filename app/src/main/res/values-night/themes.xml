<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CamScanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <!-- TextView Color in Light Mode -->

    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- Set the text color for TextView -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Dark mode -->

    <style name="background_theme_color">
        <item name="android:background">@color/black_color</item>
    </style>

    <!-- Separator Color in Dark mode -->

    <style name="separator_background_theme_color">
        <item name="android:background">@color/separator_color_dark_mode</item>
    </style>

    <!-- Text Color in Dark Mode -->

    <style name="TEXT">
        <item name="android:textColor">@color/dark_mode_textColor</item>
    </style>

    <!-- Button Design in Dark Mode -->

    <style name="BUTTON">
        <item name="android:background">#3D73DD</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>